<h1>Games#new</h1>
<div id="wrapper">
<ul id='letters'>
  <% @letters.each do |letter| %>
    <li>
    <%=letter.capitalize%>
    </li>
    <% end %>
</ul>
</div>
<form action="score" method="post" id="form">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="answer">
  <input type="submit" value="Play!" id="submit">
</form>
</div>

